<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".SignUpAs">


    <ImageView
        android:id="@+id/DonatorImage"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:onClick="OpenSignupDonatorPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/donator" />

    <TextView
        android:id="@+id/DonatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="OpenSignupDonatorPage"
        android:text="I am Donator"
        android:textColor="#E43F4658"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DonatorImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/VolunteerImge"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="OpenSignupVolunteerPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DonatorText"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@drawable/volunteericoncopy" />

    <TextView
        android:id="@+id/VolunteerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="OpenSignupVolunteerPage"
        android:text="I am Volunteer"
        android:textColor="#E43F4658"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VolunteerImge"
        app:layout_constraintVertical_bias="0.058" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="already have Acount?"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:onClick="OpenSignInPage"
            android:text="Log In"
            android:textColor="#AED581"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>