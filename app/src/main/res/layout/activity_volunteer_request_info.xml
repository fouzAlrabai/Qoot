<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f0"
    android:backgroundTint="#F5F5FA"
    android:layout_gravity="center"
    tools:context=".VolunteerRequestInfo">

    <Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#AED581"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:onClick="OpenVolunteerRequests"
            android:src="@drawable/downarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="REQUEST DETAILS"
            android:textColor="#3f4658"
            android:textSize="20dp"
            android:textStyle="bold" />
    </Toolbar>



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_marginEnd="4dp"
        android:background="@drawable/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"

        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/food"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp" />

        <TextView
            android:id="@+id/FoodType"
            android:layout_width="139dp"
            android:layout_height="52dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="start|top"
            android:hint="Type Of Event"
            android:inputType="textMultiLine"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/requesrStatus"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="start|top"
            android:hint="Requesr Status"
            android:inputType="textMultiLine"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        tools:ignore="MissingConstraints"
        android:background="@drawable/box">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/map"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp" />

<!--        <TextView-->
<!--            android:id="@+id/location"-->
<!--            android:layout_width="144dp"-->
<!--            android:layout_height="52dp"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:ems="10"-->
<!--            android:gravity="start|top"-->
<!--            android:hint="Location"-->
<!--            android:inputType="textMultiLine"-->
<!--            android:textSize="20dp"-->
<!--            tools:layout_editor_absoluteX="46dp"-->
<!--            tools:layout_editor_absoluteY="72dp" />-->
        <Button
            android:id="@+id/letsTrack"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_button"
            android:text="Track"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:onClick="OpenTrackDonatorRequest"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/guest"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp" />

        <TextView
            android:id="@+id/numberOfGuest"
            android:layout_width="113dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Guests"
            android:inputType="textPersonName"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints"
        android:background="@drawable/box">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_today_black_24dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/Date"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Today date"
            android:inputType="date"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/pickuptime"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/pickUpTime"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Pickup Time"
            android:inputType="time"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp"
            android:gravity="start|top"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="68dp"
        android:background="@drawable/box">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/note"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Notes"
            android:inputType="textMultiLine"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="68dp"
        android:background="@drawable/box">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_local_dining_black_24dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/serviced"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Donated  by:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/volname"
            android:layout_width="179dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Donator name"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp"
            android:gravity="start|top"
            android:inputType="textMultiLine"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="68dp"
        android:background="@drawable/box"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_image_black_24dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/pic"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Attachments:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="72dp" />

        <Button
            android:id="@+id/VIEwATTACHMENT"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="220dp"
            android:background="@drawable/custom_button"
            android:text="View"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:onClick="OpenAttachment"
            />

    </RelativeLayout>

    <!-- android:onClick="" -->


    <ImageView
        android:id="@+id/ChatIcon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:onClick="OpenChat"
        android:src="@drawable/chat"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.377"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/offers"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:onClick="OpenVolunteerRequests"
        android:text="Accept"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.356" />
    <!-- android:onClick="" -->
    <Button
        android:id="@+id/cancel"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:background="@drawable/cancelbutton"
        android:onClick="OpenVolunteerRequests"
        android:text="Cancel"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.356" />

    <CheckBox
        android:id="@+id/checkDel"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Delivered?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ChatIcon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="invisible"/>
    <!-- android:onClick="addListnerToCheckBox" -->


</androidx.constraintlayout.widget.ConstraintLayout>